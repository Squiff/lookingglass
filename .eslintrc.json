{
    "env": {
        "browser": true,
        "node": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["react", "jest"],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "react/prop-types": [2, { "ignore": ["children", "className", "style"] }],
        "prefer-const": "error"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
